<div class='side {{#if close}}side--close{{/if}}'>
  <div class='side__header'>
    <button class='side__logo-btn hover-disabled'>
      <img width='67px' height='21px' src='logoSmall.png' alt='logo'>
    </button>
    <div class='side__profile' title='Profile' page='profile'>
      <img class='hover-disabled' width='37px' height='37px' src='profile.svg' alt='profile'>
    </div>
  </div>
  <div class='side__body'>
    <div class='side__btn-back' page='chats'>
      <img width='34.5px' height='34.5px' src='leftArrow.svg' alt='back' page='chats'>
    </div>
    <div class='side__search'>
      {{{ Input ref="search" type='search' name='search' placeholder='Search' }}}
    </div>
    <div class='side__dialogs'>
      {{#each chats}}
        {{{ Dialog id=this.id
                   active=this.active
                   avatar=this.avatar
                   time=this.time
                   name=this.name
                   message=this.message
                   count=this.count
                   onHandler=../onHandler
        }}}
      {{/each}}
    </div>
  </div>
</div>
