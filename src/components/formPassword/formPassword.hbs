{{#> Form formName="formPassword" }}
  {{{ SettingsEditElement type="password" name="old_password" label="Old password" ref="old_password" validate=validators.password }}}
  {{{ SettingsEditElement type="password" name="new_password" label="New password" ref="new_password" validate=validators.password }}}
  {{{ SettingsEditElement type="password" name="new_password_repeat" label="Repeat the new password" ref="new_password_repeat" validate=validators.empty }}}
  <div class='settings__buttons'>
    {{{ ErrorLine className="form-error" ref="errorLine" }}}
    {{{ Button label="Save" type="primary" buttonType="submit" }}}
    {{{ Button label="Cancel" type="link" page="/settings" }}}
  </div>
{{/Form}}
