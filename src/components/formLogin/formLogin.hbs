{{#> Form formName="formLogin" }}
  {{{ Field type="text" name="login" label="Login" ref="login" validate=validators.login }}}
  {{{ Field type="password" name="password" label="Password" ref="password" validate=validators.password }}}
  <div class='container-modal__buttons'>
    {{{ ErrorLine className="form-error" ref="errorLine" }}}
    {{{ Button buttonType="submit" label="Sign in" type="primary"}}}
    {{{ Button label="Registration" type="link" page="/sign-up" }}}
  </div>
{{/Form}}
