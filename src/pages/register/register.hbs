<div class="container-modal">
  <div class='container-modal__logo'>
    {{> Logo }}
  </div>
  {{#> Modal title="Registration" }}
    {{#> FormAuth }}
      {{{ Field type="text" name="email" label="Email" ref="email" validate=validators.email }}}
      {{{ Field type="text" name="login" label="Login" ref="login" validate=validators.login }}}
      {{{ Field type="text" name="first_name" label="Name" ref="first_name" validate=validators.first_name }}}
      {{{ Field type="text" name="second_name" label="Surname" ref="second_name" validate=validators.second_name }}}
      {{{ Field type="text" name="phone" label="Phone" ref="phone" validate=validators.phone }}}
      {{{ Field type="password" label="Password" ref="password" validate=validators.password }}}
      {{{ Field type="password" name="password" label="Password (repeat)" ref="password_repeat" validate=validators.password_repeat }}}

      <div class='container-modal__buttons'>
        {{{ Button typeButton="submit" onClick=onRegister label="Register" type="primary" }}}
        {{{ Button label="Sign in" type="link" page="login" }}}
      </div>
    {{/FormAuth}}
  {{/Modal}}
</div>
